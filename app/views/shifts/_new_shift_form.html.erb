<%= simple_form_for @shift, html: { :class => 'form-horizontal' }, remote: true do |f| %>
   <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift</legend>
   <%= f.input :date, label: "Date", as: :string, :input_html => {:class => "avg datepicker"} %>
    
    <%= render :partial => 'extra_shift_form', locals: {f: f} %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Back', home_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>

