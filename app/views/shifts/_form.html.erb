<%= simple_form_for @shift, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift</legend>
  <%= f.input :date, label: "Date", as: :string, :input_html => {:class => "avg datepicker"} %>
    <%= f.input :start_time, input_html: {class: "avg"} %>
    <%= f.input :end_time, input_html: {class: "avg"} %>
    <%= f.input :notes, input_html: {class: "avg"} %>
    
    <!--%= f.input :assignment_id, :collection => Assignment.current.map{|a| a.employee}, :include_blank => true, input_html: {class: "avg"} %-->
    <% mgr_store = current_user.employee.current_assignment.store %>
    <%= f.input :assignment_id, :collection => Assignment.current.for_store(mgr_store), :include_blank => true, input_html: {class: "avg"} %>
    #.map{|a| a.employee}.sort_by{ |m| m.name.downcase }

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', shifts_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>