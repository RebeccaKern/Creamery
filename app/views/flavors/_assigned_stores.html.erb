<h3>Stores with <%= @flavor.name%></h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="centered">Address</th>
      <th class="centered">Phone Number</th>
    </tr>
  </thead>
  <tbody>
    <% @active_stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.street %> <br> 
        <%= store.city %>, <%= store.state %> <%= store.zip %></td>  
        <td><%= number_to_phone store.phone %></td>  
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @active_stores, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>